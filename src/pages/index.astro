---
import BingoCard from '../components/BingoCard.astro';
import Layout from '../layouts/Layout.astro';
import { generateBingoCards } from '../data/bingoItems';

// Generate 40 unique bingo cards on each page load
const bingoCards = generateBingoCards(40);
---

<Layout>
	{bingoCards.map((items, index) => (
		<section class="sheet">
			<BingoCard items={items} cardNumber={index + 1} />
		</section>
	))}
</Layout>
